<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2><i class="fa fa-files-o"></i><span class="break"></span>Create a new gem</h2>
    </div>
    <div class="panel-body">

      <%= form_for @jem do |f| %>
        <small>These fields are required for processing and generating gems automatically :)</small><br><br>
        <%= render 'shared/error_messages' %>

        <%= f.label :author, 'Your Name' %></br>
        <%= f.text_field :author, class: "form-control"  %></br>

        <%= f.label :email, 'Your Email Address' %></br>
        <%= f.text_field :email, class: "form-control", placeholder: "ex: example-email@gmail.com"  %></br>

        <%= f.label :name, 'Name of Your New Gem' %></br>
        <%= f.text_field :name, class: "form-control", placeholder: "ex: example-gem-js-rails" %></br>

        <%= f.label :description, 'Subtitle of Your Gem' %></br>
        <%= f.text_field :description, class: "form-control", placeholder: "one line description of gem"  %></br>
      
        <%= f.label :summary, 'Short Summary of Your Gem' %></br>
        <%= f.text_field :summary, class: "form-control", placeholder: "short summary of what it does"  %></br>
      
        <%= f.label :github, 'Source Website of Your Assets' %></br>
        <%= f.text_field :github,:placeholder => 'http://', class: "form-control", value: "http://"  %></br>

        <%= f.label :version_number, 'Initial Version Number of Your Gem' %></br>
        <%= f.text_field :version_number, value: '0.0.1', class: "form-control"  %></br>
      
        
      
        <%= f.submit 'Create Gem', :class => 'btn btn-primary full-width-button' %>
      <% end %>
    </div>
  </div>
</div>
